<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/textTimecapsule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/open_sans_light"
        android:text="TIMECAPSULE"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTimecapsule2" />

    <ImageView
        android:id="@+id/imageTimecapsule2"
        android:layout_width="235dp"
        android:layout_height="129dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/timecapsulelogoblue" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:background="@mipmap/send_capsule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimecapsule2" />

    <ImageView
        android:id="@+id/img_orange"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/orange_small"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_view"
        app:layout_constraintStart_toStartOf="@+id/btn_view" />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        android:background="@mipmap/unopened_capsule"
        app:layout_constraintEnd_toStartOf="@+id/btn_create"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimecapsule2" />

    <TextView
        android:id="@+id/txt_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ffff"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/img_orange"
        app:layout_constraintEnd_toEndOf="@+id/img_orange"
        app:layout_constraintStart_toStartOf="@+id/img_orange"
        app:layout_constraintTop_toTopOf="@+id/img_orange" />

    <TextView
        android:id="@+id/txt_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimecapsule2" />


</androidx.constraintlayout.widget.ConstraintLayout>