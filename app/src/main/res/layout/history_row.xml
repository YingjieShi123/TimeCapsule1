<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/history_row_layout"
    android:orientation="horizontal"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/txt_hist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Capsule Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_hist_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender or recipient name here" />

        <TextView
            android:id="@+id/txt_hist_sent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent date goes here" />

        <TextView
            android:id="@+id/txt_hist_open_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening date goes here" />

    </LinearLayout>

</LinearLayout>